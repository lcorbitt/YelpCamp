<%- include('../partials/header') %>
<div class="container">
    <div class="container">
        <h1>Edit Comment </h1>
        <div style="margin: 30px auto;">
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <input type="hidden" id="commentAuthor" name="comment[author][username]" value="<%= currentUser.username %>">
                <div>
                    <p>Author: <%= currentUser.username %></p>
                </div>
                <div class="form-group">
                    <input required="true" class="form-control" type="text" name="comment[body]" value="<%= comment.body %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-md type="submit">Submit</button>
                </div>
                <a href="/campgrounds">Back</a>
            </form>
        </div>
    </div>
</div>
<%- include('../partials/footer') %>