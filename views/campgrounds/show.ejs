<%- include('../partials/header') %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= campground.image %>">
                <div class="caption">
                    <h4 class="float-right">$9.00/night</h4>
                    <h4><a href="/campgrounds/<%= campground._id %>"><%= campground.name %></a></h4>
                    <p>
                        <em>Submitted by <%= campground.author.username %></em>
                    </p>
                    <div class="well">
                        <p><%= campground.description %></p>
                    </div>
                    <div class="well">
                        <div class="text-left">
                            <a href='/campgrounds/<%= campground._id %>/comments/new' class="btn btn-success">Add Comment</a><br>
                        </div>
                        <hr>
                        <h5>Comments: </h5>
                        <% campground.comments.forEach((comment) => { %>
                            <div class="row">
                                <div class="col-md-12">
                                    <p><strong><%= comment.author.username %></strong>
                                    <span class="float-right">10 days ago</span> 
                                    <p><%= comment.body %></p>
                                    <hr>
                                </div>
                            </div>
                        <% }) %>     
                        
                    </div>
                    
                    <a href="/index">Back</a>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../partials/footer') %>
